<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFECEC" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="60dp" android:height="60dp" />
            <solid android:color="#FFB6B6" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:bottom="45dp"
        android:left="45dp"
        android:right="45dp"
        android:top="45dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="#D32F2F" />
            </shape>
        </rotate>
    </item>
    <item
        android:gravity="center"
        android:bottom="45dp"
        android:left="45dp"
        android:right="45dp"
        android:top="45dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="#D32F2F" />
            </shape>
        </rotate>
    </item>
</layer-list>